    <Button android:text="data" android:id="@+id/btData" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:text="hora" android:id="@+id/btHora" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:text="faixa de valores" android:id="@+id/btFaixa" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:text="escolha" android:id="@+id/btEscolha" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:text="unique" android:id="@+id/btUnico" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:text="varios" android:id="@+id/btVarios" android:layout_width="match_parent" android:layout_height="wrap_content"/>
