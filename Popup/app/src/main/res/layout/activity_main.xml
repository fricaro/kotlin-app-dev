    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button android:text="mensagem" android:id="@+id/btMensagem" android:layout_width="match_parent" android:layout_height="wrap_content"/>
