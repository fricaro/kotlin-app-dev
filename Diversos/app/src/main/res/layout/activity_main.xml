<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >


    <Button android:id="@+id/btnHtml" android:text="HTML" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnDiscar" android:text="Discar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnLigar" android:text="Ligar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnCompartilhar" android:text="Compartilhar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnEmail" android:text="Email" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnPonto" android:text="Ponto" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnRota" android:text="Rota" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnSms" android:text="SMS" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnYoutube" android:text="Youtube" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnFoto" android:text="Foto" android:layout_width="match_parent" android:layout_height="wrap_content"/>


</LinearLayout>